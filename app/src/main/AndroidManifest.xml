<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tw.scu.edu.graduationprojrct">

    <!-- CameraX libraries require minSdkVersion 21, while this quickstart app
  supports low to 19. Needs to use overrideLibrary to make the merger tool
  ignore this conflict and import the libraries while keeping the app's lower
  minSdkVersion value. In code, will check SDK version, before calling CameraX
  APIs. -->
    <uses-sdk
        tools:overrideLibrary="
          androidx.camera.camera2, androidx.camera.core,
          androidx.camera.view, androidx.camera.lifecycle" />

    <uses-feature android:name="android.hardware.camera"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GraduationProjrct.NoActionBar">
        <activity android:name=".scene.PokedexPartScene"></activity>
        <activity android:name=".scene.SportResultScene" />
        <activity android:name=".scene.SportScene" />
        <activity android:name=".scene.NavigationScene" />
        <activity android:name=".scene.OtherSettingScene" />
        <activity android:name=".scene.AccountEditScene" />
        <activity android:name=".scene.CheckAccountScene" />
        <activity android:name=".scene.PokedexSelectedScene" />
        <activity android:name=".scene.AccountSetScene" />
        <activity android:name=".scene.AdminManagement" />
        <activity android:name=".scene.TestSelfScene" />
        <activity android:name=".java.CameraXLivePreviewActivity" />
        <activity
            android:name=".scene.EnterScene"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".scene.PersonalScene"
            android:screenOrientation="landscape" />
        <activity
            android:name=".scene.SettingScene"
            android:screenOrientation="landscape" />
        <activity
            android:name=".scene.BGMScene"
            android:screenOrientation="landscape" />
        <activity
            android:name=".scene.RemindScene"
            android:screenOrientation="landscape" />
        <activity
            android:name=".scene.PokedexScene"
            android:screenOrientation="landscape" />
        <activity
            android:name=".scene.ResultScene"
            android:screenOrientation="landscape" />
        <activity
            android:name=".scene.SportSelectScene"
            android:screenOrientation="landscape" />
        <activity
            android:name=".scene.BasicSportScene"
            android:screenOrientation="landscape" />
        <activity
            android:name=".scene.RegistScene"
            android:screenOrientation="landscape" />
        <activity
            android:name=".scene.MainScene"
            android:screenOrientation="landscape" />
        <activity
            android:name=".scene.LoginScene"
            android:screenOrientation="landscape" />
    </application>

</manifest>